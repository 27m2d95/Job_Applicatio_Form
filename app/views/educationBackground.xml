<Alloy>
	<Window class="container" title="Job Application Form">
		<ScrollView class="vert">
			<ImageView height="50" width="300" top="10" image="/images/logo.PNG"></ImageView>
			<Label class="h4" top="20">JOB APPLICATION FORM</Label>
			<View class="wsize hsize vert" top="50" bottom="10">
				<Label class="h4" left="10">5- Education Background</Label>
				<TextField class="textField" required="1" hintText="*Institution's Name" id="institutionName" top="5"></TextField>
				<TextField class="textField numberKeyboard" required="1" hintText="*Year" id="year"></TextField>
				<TextField class="textField" required="1" hintText="*Level Achieved" id="levelAchieved"></TextField>
				<TextField class="textField"  required="1" hintText="*Cert & Qualification" id="certQualification"></TextField>
				<View class="wsize hsize vert" id="viewadd" top="0"></View>
				<View class="wsize hsize horz">
					<Button class="button"  right="30" onClick="addEB" id="plusEB">Add</Button>
					<Button class="button"  left="30" onClick="rmEB" id="minEB">Remove</Button>
				</View>
				<Button class="button" width="330" onClick="goTo">Next</Button>
			</View>
		</ScrollView>
	</Window>
</Alloy>