<Alloy>
	<Window class="container" title="Job Application Form">
		<ScrollView class="vert">
			<ImageView height="50" width="300" top="10" image="/images/logo.PNG"></ImageView>
			<Label class="h4" top="20">JOB APPLICATION FORM</Label>
			<View class="wsize hsize vert" top="50" bottom="10">
				<Label class="h4" left="10">Interview Portion </Label>
				<TextField class="textField" required="1" hintText="*Self Impression" id="selfImpression" top="5" onTouchend="selfImpressionPicker" onFocus="blr"></TextField>	
				<TextField class="textField" required="1" hintText="*Self Motivition" id="selfMotivition" top="15" onTouchend="selfMotivitionPicker" onFocus="blr"></TextField>
				<TextField class="textField" required="1" hintText="*Team Work" id="teamWork" top="15" onTouchend="teamWorkPicker" onFocus="blr"></TextField>
				<TextField class="textField" required="1" hintText="*Knowladge" id="knowladge" top="15" onTouchend="knowladgePicker" onFocus="blr"></TextField>
				<TextField class="textField" required="1" hintText="*Skill" id="skill" top="15" onTouchend="skillPicker" onFocus="blr"></TextField>
				<TextField class="textField" required="1" hintText="*Meeting the Job Expectation" id="meetExpect" top="15" onTouchend="meetExpectPicker" onFocus="blr"></TextField>
				<Button class="button" width="330" onClick="goTo">Next</Button>
			</View>
		</ScrollView>
	</Window>
</Alloy>