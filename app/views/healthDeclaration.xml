					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd11" required="1" onTouchend="hd11Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd11View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">12- Kidney Diseases / (Penyakit Buah Pinggang)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd12" required="1" onTouchend="hd12Picker" onFocus="blr" left="16"></TextField>
