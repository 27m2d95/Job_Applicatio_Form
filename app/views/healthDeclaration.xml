					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd8" required="1" onTouchend="hd8Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd8View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">9- Diabetes Mellitus(DM) / (Kencing Manis)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd9" required="1" onTouchend="hd9Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd9View"></View>
				
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">10- Heart Diseases / (Penyakit Jantung)</Label>
