				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">6- Asthma / (Lelah)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd6" required="1" onTouchend="hd6Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd6View"></View>
				
				
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">7- Tuberculosis(PTB) / (Batuk Kering)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd7" required="1" onTouchend="hd7Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd7View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
