				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd15View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">16- Venereal Diseases / (Penyakit Kelamin)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd16" required="1" onTouchend="hd16Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd16View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">17- Leukemia / (Leukimia)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd17" required="1" onTouchend="hd17Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd17View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">18- Hepatitis / (Hepatitis)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd18" required="1" onTouchend="hd18Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd18View"></View>
				<Button class="button" width="330" onClick="goTo">Next</Button>
			</View>
		</ScrollView>
	</Window>
</Alloy>