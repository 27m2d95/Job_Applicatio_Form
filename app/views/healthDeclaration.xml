<Alloy>
	<Window class="container" title="Job Application Form">
		<ScrollView id="indexScroll" class="vert">
			<ImageView height="50" width="300" top="10" image="/images/logo.PNG"></ImageView>
			<Label class="h4" top="20">JOB APPLICATION FORM</Label>
			<View class="wsize hsize vert" top="50" bottom="10">
				<Label class="h4" top="10" left="10">11- Health Declaration</Label>
				<Label class="h4" top="10" left="10">Have you ever suffered any of the following conditions? (if yes please describe)</Label>
				<View class="horz wfill hsize pad" top="5" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">1- Psychiartic / (Sakit Jiwa)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd1" required="1" onTouchend="hd1Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd1View"></View>
				
				
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">2- Epilepsy / (Sawan)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd2" required="1" onTouchend="hd2Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd2View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">3- Migraine / (Migrain)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd3" required="1" onTouchend="hd3Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd3View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">4- Hysteria / (Histeria)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd4" required="1" onTouchend="hd4Picker" onFocus="blr" left="16"></TextField>
				</View>
				<View class="vert wsize hsize pad" top="2.5" borderColor="black" id="hd4View"></View>
				
				
				
				<View class="horz wsize hsize pad" top="15" borderColor="black">
					<Label class="h4" width="70%" height="50" left="10">5- Allergic Rhinitis / (Resedung)</Label>
					<TextField class="textField1" width="22%" height="50" hintText="*Answer" id="hd5" required="1" onTouchend="hd5Picker" onFocus="blr" left="16"></TextField>
